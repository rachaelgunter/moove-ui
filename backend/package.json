{
  "name": "moove-unified-ui-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "migrate:dev": "prisma migrate dev --preview-feature",
    "migrate:dev:reset": "prisma migrate reset --preview-feature",
    "migrate:dev:create": "prisma migrate dev --create-only --preview-feature",
    "seed:dev": "prisma db seed --preview-feature",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "docker:db": "docker-compose -f docker-compose.db.yml up",
    "docker:start:dev": "MODE=dev docker-compose up --remove-orphans",
    "docker:start:debug": "MODE=debug docker-compose up",
    "docker:migrate:create": "docker exec -it api npm run migrate:dev:create",
    "docker:migrate": "docker exec -it api npm run migrate:dev",
    "docker:seed": "docker exec -it api npm run seed:dev",
    "docker:rebuild-volumes": "MODE=dev docker-compose up --build -V && docker exec -it api npx prisma generate"
  },
  "dependencies": {
    "@google-cloud/bigquery": "^5.5.0",
    "@google-cloud/storage": "^5.8.3",
    "@nestjs/common": "^7.6.11",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.11",
    "@nestjs/graphql": "^7.9.8",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.11",
    "@prisma/client": "^2.20.0",
    "apollo-server-express": "^2.19.2",
    "auth0": "^2.33.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "email-validator": "^2.0.4",
    "googleapis": "^67.1.1",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.2",
    "jwks-rsa": "^1.12.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "prisma": "^2.20.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.11",
    "@types/auth0": "^2.33.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/passport-jwt": "^3.0.4",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prisma": "^2.16.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.15",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cd ../frontend && lint-staged && npm run lint:fix && cd ../backend && lint-staged && npm run lint:fix",
      "pre-push": "cd ../frontend && npm run lint && cd ../backend && npm run lint"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
